<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Enovents!</title>
  <link rel="icon" href="events/favicon.ico" type="image/x-icon" />
  <link rel="stylesheet" href="events/style.css">
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  >
</head>

<body>
  <div class="container">
    <header>Event Registration form</header>
    <div class="progress-bar">
      <div class="step">
        <p>Name</p>
        <div class="bullet">
          <span>1</span>
        </div>
        <div class="check fas fa-check"></div>
      </div>
      <div class="step">
        <p>Image</p>
        <div class="bullet">
          <span>2</span>
        </div>
        <div class="check fas fa-check"></div>
      </div>
      <div class="step">
        <p>Date</p>
        <div class="bullet">
          <span>3</span>
        </div>
        <div class="check fas fa-check"></div>
      </div>
      <div class="step">
        <p>Email</p>
        <div class="bullet">
          <span>4</span>
        </div>
        <div class="check fas fa-check"></div>
      </div>
    </div>
    <div class="form-outer">
      <form action="/addevent" method="post">
        <div class="page slide-page">
          <div class="title">Event Info:</div>
          <div class="field">
            <div class="label">Event Name:</div>
            <input type="text" name="event_name">
          </div>
          <div class="field">
            <div class="label">Event Organiser:</div>
            <input type="text" name="event_organizer">
          </div>
          <div class="field">
            <button class="firstNext next">Next</button>
          </div>
        </div>
        <div class="page">
          <div class="title">Image :</div>
          <div class="field">
            <div class="label">url</div>
            <input type="url" name="event_image_url">
          </div>

          <div class="field">
            <div class="label">Event Type:</div>
            <select name="type">
              <option>General</option>
              <option>Technical</option>
              <option>Non-Technical</option>
            </select>
          </div>
          <div class="field btns">
            <button class="prev-1 prev">Previous</button>
            <button class="next-1 next">Next</button>
          </div>
        </div>

        <div class="page">
          <div class="title">Event duration:</div>
          <div class="field">
            <div class="label">Start Date</div>
            <input type="date" name="start_date">
          </div>
          <div class="field">
            <div class="label">End Date</div>
            <input type="date" name="end_date">
          </div>


          <div class="field btns">
            <button class="prev-2 prev">Previous</button>
            <button class="next-2 next">Next</button>
          </div>
        </div>

        <div class="page">
          <div class="title">Login Details:</div>
          <div class="field">
            <div class="label">Email</div>
            <input type="email" name="event_mail">
          </div>
          <div class="field">
            <div class="label">Enter event description</div>
            <textarea name="event_description" rows="4" cols="50" name="comment" placeholder="Type here..."></textarea>

          </div>
          <div class="field btns">
            <button class="prev-3 prev">Previous</button>
            <button class="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script src="events/script.js"></script>


</body>

</html>